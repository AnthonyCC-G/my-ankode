{% extends 'base.html.twig' %}

{% block title %}Veille Technologique - MY-ANKODE{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/veille.css') }}">
{% endblock %}

{% block body %}
<div class="veille-container">
    <!-- ZONE 4 : CONFIGURER VEILLE -->
    <div class="config-veille">
        <h4><i class="bi bi-search"></i> Configurer Veille</h4>
        
        <div class="row g-2">
            <div class="col-md-8">
                <input 
                    type="text" 
                    id="search-input" 
                    class="form-control" 
                    placeholder="Rechercher par mot-cle (ex: React, Symfony, Docker...)"
                >
            </div>
            <div class="col-md-4">
                <button id="search-btn" class="btn btn-primary me-2">
                    <i class="bi bi-search"></i> Rechercher
                </button>
                <button id="reset-btn" class="btn btn-secondary">
                    <i class="bi bi-arrow-counterclockwise"></i> Reset
                </button>
            </div>
        </div>
        
        <!-- Messages flash / erreurs -->
        <div id="search-feedback"></div>
        
        <!-- Filtres -->
        <div class="mt-3">
            <button id="show-all-btn" class="btn btn-sm btn-outline-primary active me-2">
                Tous les articles
            </button>
            <button id="show-favorites-btn" class="btn btn-sm btn-outline-danger">
                <i class="bi bi-heart-fill"></i> Mes favoris
            </button>
        </div>
    </div>
    
    <!-- ZONE 5 : FAVORIS -->
    <div class="favoris-sidebar">
        <h5><i class="bi bi-heart-fill"></i> Favoris</h5>
        <div id="favorites-sidebar" class="favoris-list">
            <p class="text-white-50 small">Chargement...</p>
        </div>
    </div>
    
    <!-- ZONE 6 : RESULTATS -->
    <div class="resultats-zone">
        <h3 id="articles-title">Tous les articles</h3>
        <div id="articles-container">
            <div class="text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Chargement...</span>
                </div>
                <p class="mt-3">Chargement des articles...</p>
            </div>
        </div>
    </div>
    
    <!-- PAGINATION -->
    <div id="pagination-container" class="pagination-zone"></div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/veille.js') }}"></script>
{% endblock %}
