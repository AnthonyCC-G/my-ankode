{% extends 'base.html.twig' %}

{% block title %}Veille Technologique - MY-ANKODE{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Veille Technologique</h1>
    
    {% if articles is empty %}
        <div class="alert alert-info">
            <p class="mb-0">Aucun article disponible pour le moment.</p>
            <small>Lancez la commande <code>php bin/console app:fetch-rss</code> pour récupérer les articles.</small>
        </div>
    {% else %}
        <p class="text-muted">{{ articles|length }} article(s) récent(s)</p>
        
        <div class="list-group">
            {% for article in articles %}
                <a href="{{ article.url }}" target="_blank" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">{{ article.title }}</h5>
                        <small class="text-muted">{{ article.publishedAt|date('d/m/Y H:i') }}</small>
                    </div>
                    <p class="mb-1">{{ article.description|striptags|slice(0, 150) }}...</p>
                    <small class="text-muted">Source : {{ article.source }}</small>
                </a>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}