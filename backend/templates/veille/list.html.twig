{% extends 'base.html.twig' %}

{% block title %}Veille Technologique - MY-ANKODE{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/veille.css') }}">
{% endblock %}

{% block body %}
{# ===== MINI-HEADER : Titre + Accroche ===== #}
<div class="veille-header">
    <h1 class="veille-title">Veille Technologique</h1>
    <p class="veille-subtitle">Reste à jour avec les dernières tendances tech !</p>
</div>

{# ===== GRILLE PRINCIPALE 2x2 ===== #}
<div class="veille-grid">
    
    {# ===== BLOC 1 : RECHERCHE (Ligne 1, Colonne 1) ===== #}
    <div class="veille-search">
        <div class="search-header">
            <h3 class="block-title">Recherche</h3>
            <div id="search-feedback" class="search-feedback"></div>
        </div>
        
        <div class="search-controls">
            <div class="search-input-group">
                <input 
                    type="text" 
                    id="search-input" 
                    class="search-input" 
                    placeholder="Mots-clés (ex: React, Symfony, Docker...)"
                >
                <button id="search-btn" class="search-btn" title="Rechercher">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                    </svg>
                </button>
                <button id="reset-btn" class="reset-btn" title="Réinitialiser">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                    </svg>
                </button>
            </div>
            
            {# Boutons de tri #}
            <div class="filter-buttons">
                <button class="filter-btn" data-filter-type="source" data-current-state="all">
                    Tous
                </button>
                <button class="filter-btn" data-filter-type="status" data-current-state="all">
                    Tous
                </button>
                <button class="filter-btn active" data-filter-type="date" data-current-state="desc">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                    Récents
                </button>
            </div>
            
        </div>
        
    </div>
    
    {# ===== BLOC 2 : FAVORIS (Ligne 1, Colonne 2) ===== #}
    <div class="veille-favorites">
        <button id="favorites-toggle" class="favorites-header">
            <h3 class="block-title">Favoris</h3>
            <svg class="accordion-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
        </button>
        
        <div id="favorites-accordion" class="favorites-accordion">
            <div id="favorites-list" class="favorites-list">
                <p class="favorites-empty">Chargement...</p>
            </div>
        </div>
    </div>
    
    {# ===== BLOC 3 : ARTICLES (Ligne 2, Colonne 1) ===== #}
    <div class="veille-articles">
        <div class="articles-header">
            <h3 id="articles-title" class="block-title">Tous les articles</h3>
            <p class="articles-counter">Voici les premiers articles</p>
        </div>
    
        {# ===== TABS MOBILE UNIQUEMENT (cachés en desktop) ===== #}
        <div class="articles-tabs">
            <button id="tab-all" class="tab-btn active" data-tab="all">
                Tous
            </button>
            <button id="tab-favorites" class="tab-btn" data-tab="favorites">
                Favoris
                <span id="favorites-badge" class="favorites-badge">0</span>
            </button>
        </div>
        
        {# Container carrousel avec boutons navigation #}
        <div class="carousel-wrapper">
            {# Bouton Precedent #}
            <button id="carousel-prev" class="carousel-nav carousel-nav--prev" title="Articles precedents">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
                </svg>
            </button>
            
            {# Container articles (scrollable) #}
            <div id="articles-container" class="articles-container">
                <div class="articles-loading">
                    <div class="spinner"></div>
                    <p>Chargement des articles...</p>
                </div>
            </div>
            
            {# Bouton Suivant #}
            <button id="carousel-next" class="carousel-nav carousel-nav--next" title="Articles suivants">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
            </button>
        </div>
        
        
    </div>
    
    {# ===== BLOC 4 : SOURCES RSS (Version minimaliste) ===== #}
    <div class="veille-sources">
        <p class="sources-credits">
            <svg class="rss-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z" />
            </svg>
            Articles fournis par 
            <a href="https://korben.info" target="_blank" rel="noopener noreferrer">Korben.info</a>, 
            <a href="https://dev.to" target="_blank" rel="noopener noreferrer">Dev.to</a>
            — Tous droits réservés aux auteurs
        </p>
    </div>

</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/veille.js') }}"></script>
{% endblock %}